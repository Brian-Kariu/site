---
import Card from '@/components/portfolio/ui/Card'
import { getCollection } from 'astro:content'
import data from '@/data/data.json'

const githubRepos = `${data.links.github}?tab=repositories`
const projects = data.projects
---

<section
	data-testid='projects'
	id='projects'
	class='z-50 h-1/3 w-full 2xs:w-11/12 py-8 2xs:py-10 xs:py-12 sm:py-16 md:py-20 lg:py-24 px-2 2xs:px-3 xs:px-4 sm:px-6 md:px-8 lg:px-12 bg-white dark:bg-background flex flex-col items-center justify-center'
>
	<div
		class='w-full max-w-4xl bg-white border-2 2xs:border-4 border-black dark:bg-background
                            shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] 2xs:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)]
                            transform hover:-translate-y-1 hover:shadow-[12px_12px_0px_0px_rgba(0,0,0,1)]
                            transition-all duration-300 p-3 2xs:p-4 sm:p-6 md:p-8 mb-6 2xs:mb-8 sm:mb-10 md:mb-12'
	>
		<h1
			class='z-50 text-xl 2xs:text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-black text-black text-center dark:text-white'
		>
			Projects ðŸš€
		</h1>
	</div>
	<div
		class='z-50 mb-6 2xs:mb-8 sm:mb-10 md:mb-12 w-full 2xs:w-11/12 max-w-6xl grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 2xs:gap-4 sm:gap-6 md:gap-8 justify-center items-stretch'
	>
		{
			projects.map((project) => (
				<Card
					title={project.title}
					category={project.category}
					repo={project.repo}
					link={project.link}
					description={project.description}
					tags={project.tags}
				/>
			))
		}
	</div>
	<a
		href={githubRepos}
		target='_blank'
		rel='noopener'
		class='z-50 flex flex-row items-center justify-center text-sm sm:text-base text-black hover:text-orange dark:text-white dark:hover:text-orange transition-colors duration-300'
		aria-label='link to repository'
	>
		View full private projects archive
		<svg
			xmlns={githubRepos}
			fill='none'
			viewBox='0 0 24 24'
			stroke-width='1.5'
			stroke='currentColor'
			class='ml-1 h-6 w-6'
		>
			<path
				stroke-linecap='round'
				stroke-linejoin='round'
				d='M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3'></path>
		</svg>
	</a>
</section>
