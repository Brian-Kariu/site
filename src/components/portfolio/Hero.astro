---
import heroImage from '../../assets/images/workspace_banner.png'
import { Button } from '@/components/ui.astro/button.tsx'
import { Image } from 'astro:assets'
import { cn } from '@/lib/utils'
import { motion } from 'framer-motion'
import data from '@/data/data.json'

import Social from '@/components/portfolio/ui/Social'

const containerVariants = {
	hidden: { opacity: 0 },
	visible: {
		opacity: 1,
		transition: {
			staggerChildren: 0.2,
			delayChildren: 0.3
		}
	}
}

const itemVariants = {
	hidden: { y: 20, opacity: 0 },
	visible: {
		y: 0,
		opacity: 1,
		transition: {
			duration: 0.5,
			ease: 'easeOut'
		}
	}
}

const socialIconVariants = {
	hidden: { scale: 0 },
	visible: {
		scale: 1,
		transition: {
			type: 'spring',
			stiffness: 260,
			damping: 20
		}
	},
	hover: {
		scale: 1.1,
		rotate: [0, -10, 10, -10, 0],
		transition: {
			duration: 0.4
		}
	}
}
const firstName = data.fullName.split(' ')[0]
const about = data.metadata.description
---

<section
	data-testid='hero'
	class='relative h-1/3 max-h-[120vh] flex items-center justify-center overflow-hidden'
>
	<div
		class='relative z-10 w-full max-w-[95vw] 2xs:max-w-[90vw] mx-auto px-2 2xs:px-3 xs:px-4 sm:px-6 lg:px-8 h-full'
	>
		<div
			class='grid grid-cols-1 lg:grid-cols-2 gap-4 2xs:gap-6 sm:gap-8 lg:gap-12 items-center h-full py-8 2xs:py-12 sm:py-16 lg:py-20'
		>
			<div
				class='flex flex-col justify-center space-y-4 2xs:space-y-6 sm:space-y-8 text-center lg:text-left lg:space-y-6'
			>
				<h1
					class='text-2xl 2xs:text-3xl xs:text-4xl sm:text-5xl md:text-6xl lg:text-6xl font-bold text-black dark:text-white leading-tight'
				>
					Hiüëã I'm <span class='text-orange'>{firstName}</span>, a Software Engineer who battles
					bugsüêõ and builds beautiful things‚ú®.
				</h1>
				<p
					class='text-base 2xs:text-lg xs:text-xl sm:text-2xl md:text-2xl lg:text-xl text-gray-600 dark:text-gray-300 leading-relaxed max-w-none lg:max-w-lg mx-auto lg:mx-0'
				>
					{about}
				</p>
				<div class='flex flex-row gap-4 pt-6 lg:pt-4 justify-center lg:justify-start'>
					<Social />
				</div>
			</div>

			<div
				class='hidden lg:block relative lg:absolute lg:right-0 lg:top-0 lg:w-[55%] lg:h-full flex items-center justify-center'
			>
				<div
					class='relative w-full max-w-lg lg:max-w-none lg:w-full lg:h-full flex items-center justify-end'
				>
					<Image
						src={heroImage}
						alt='workspace banner'
						format='png'
						width={1000}
						height={800}
						class='w-full h-auto max-w-lg sm:max-w-xl md:max-w-2xl lg:max-w-none lg:w-full lg:h-full object-contain object-right scale-x-[-1] drop-shadow-2xl'
						loading='eager'
					/>
				</div>
			</div>
		</div>
	</div>

	<!-- Background overlay for better text readability on mobile -->
	<div
		class='absolute inset-0 bg-gradient-to-r from-white via-white/90 to-transparent dark:from-background dark:via-background/90 dark:to-transparent lg:hidden'
	>
	</div>
</section>
